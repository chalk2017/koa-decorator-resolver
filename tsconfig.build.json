{
    "compilerOptions": {
        "module": "Commonjs",
        "target": "ESNext",
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "baseUrl": ".",
        "outDir": "lib",
        "typeRoots": [
            "types"
        ],
        "types": [
            "node"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}