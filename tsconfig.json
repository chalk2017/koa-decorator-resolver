{
    "compilerOptions": {
        "module": "Commonjs",
        "target": "ESNext",
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": ".",
        "baseUrl": ".",
        "typeRoots": [
            "types",
            "reflect-metadata"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
    },
    "include": [
        "test/**/*",
        "reflect-metadata"
    ],
    "exclude": [
        "node_modules"
    ]
}